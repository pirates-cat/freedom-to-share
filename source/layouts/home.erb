<% content_for :hero do %>
  <section class="px-4 text-3xl text-white md:px-0" role="hero">
    <div class="container flex flex-col max-w-4xl py-12 md:flex-row">
      <p>
        <%= t('home.hero2.text') %>
      </p>
    </div>
  </section>
<% end %>
<% wrap_layout :base do %>
  <div id="home" class="container max-w-4xl leading-relaxed prose-lg text-gray-800 md:flex">
    <article class="px-4 pb-8 md:px-0 md:pb-0">
      <%= yield %>
    </article>
    <aside class="flex flex-col items-end md:pl-5">
      <div class="px-4 md:rounded">
        <script id="proca" src="https://sign.freesharing.eu/d/demo/eci/index.js"></script>      
        <div class="proca-widget"></div>
      </div>
    </aside>
  </div>
  <dl class="container hidden max-w-4xl px-4 py-3 mt-6 text-blue-900 bg-blue-100 border-t-4 border-blue-400 rounded-b shadow-md md:block">
    <dt class="font-bold"><%= t('eci.name') %></dt>
    <dd class="pb-4">Freedom to Share</dd>
    <dt class="font-bold"><%= t('eci.description.title') %></dt>
    <dd>
      <div><%= t('eci.description.body') %></div>
      <div class="eci-more"></div>
    <dd>
  </dl>
<% end %>
