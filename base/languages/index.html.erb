<h2>Select your language</h2>
<div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
  <% data.languages.each do |l| %>
    <a href="/<%= l.code %>" class="px-4 py-2 bg-gray-100 hover:bg-secondary hover:underline hover:text-white" lang="<%= l.code %>" hreflang="<%= l.code %>" rel="alternate"><%= l.name %></a>
  <% end %>
</div>
